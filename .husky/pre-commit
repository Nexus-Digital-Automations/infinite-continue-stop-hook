#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ”„ Running enhanced pre-commit hooks..."

# Check if this is a merge commit (skip hooks for merge commits)
if git rev-parse -q --verify MERGE_HEAD; then
  echo "âš ï¸ Merge commit detected, skipping pre-commit hooks"
  exit 0
fi

# Function to run command with timeout and proper error handling
run_with_timeout() {
  local timeout_duration="$1"
  local command="$2"
  local description="$3"

  echo "ğŸ” $description..."

  if timeout "$timeout_duration" $command; then
    echo "âœ… $description completed successfully"
    return 0
  else
    echo "âŒ $description failed or timed out"
    return 1
  fi
}

# Function to check if staged files include specific patterns
has_staged_files() {
  local pattern="$1"
  git diff --cached --name-only | grep -E "$pattern" > /dev/null
}

# Stage 0: Commit message validation (if commitlint is available)
echo "ğŸ“‹ Stage 0: Commit message validation"
if command -v npx > /dev/null && [ -f "commitlint.config.js" ]; then
  echo "ğŸ” Validating commit message format..."
  # For pre-commit, we'll validate the commit message later in prepare-commit-msg
  echo "âœ… Commit message validation configured"
else
  echo "â„¹ï¸ Commitlint not configured, skipping message validation"
fi

# Stage 1: Lint-staged (efficient linting and formatting on staged files only)
echo "ğŸ“‹ Stage 1: Lint-staged processing"

if command -v npx > /dev/null && [ -f ".lintstagedrc.js" ]; then
  if ! run_with_timeout "120s" "npx lint-staged" "Lint-staged processing (ESLint, Prettier, Security)"; then
    echo "âŒ Lint-staged processing failed"
    echo "ğŸ’¡ Issues detected in staged files. Please review and fix:"
    echo "   - ESLint errors: Run 'npm run lint:fix'"
    echo "   - Formatting issues: Run 'npx prettier --write <files>'"
    echo "   - Security issues: Review Semgrep findings"
    exit 1
  fi
else
  echo "âš ï¸ Lint-staged not configured, falling back to manual checks"

  # Fallback: Manual checks
  if has_staged_files "\.(js|ts|json)$"; then
    echo "ğŸ” Running fallback lint check on staged files..."
    staged_files=$(git diff --cached --name-only --diff-filter=ACMR | grep -E "\.(js|ts)$" | tr '\n' ' ')

    if [ -n "$staged_files" ]; then
      if ! npx eslint $staged_files; then
        echo "âŒ ESLint found issues in staged files"
        echo "ğŸ’¡ Tip: Run 'npm run lint:fix' to auto-fix issues"
        exit 1
      fi
      echo "âœ… All staged files pass linting"
    fi
  fi
fi

# Stage 2: Enhanced security scanning
echo "ğŸ“‹ Stage 2: Security validation"

# Run comprehensive security scan if Semgrep is available
if command -v semgrep > /dev/null; then
  echo "ğŸ”’ Running comprehensive security analysis..."

  # Focus on staged files for performance
  staged_security_files=$(git diff --cached --name-only --diff-filter=ACMR | grep -E "\.(js|ts|json|py|yaml|yml)$" | tr '\n' ' ')

  if [ -n "$staged_security_files" ]; then
    if ! run_with_timeout "60s" "semgrep --config=p/security-audit --config=p/owasp-top-ten --error --quiet --no-rewrite-rule-ids $staged_security_files" "Semgrep security scan"; then
      echo "âŒ Security vulnerabilities detected in staged files"
      echo "ğŸ”§ Please review and fix security issues before committing"
      echo "ğŸ’¡ Run: semgrep --config=p/security-audit <file> for details"
      exit 1
    fi
    echo "âœ… No security vulnerabilities found in staged files"
  else
    echo "â„¹ï¸ No security-relevant files in staging area"
  fi
else
  echo "âš ï¸ Semgrep not available, skipping advanced security scan"
fi

# Stage 3: Quick test validation (only if source code changed)
echo "ğŸ“‹ Stage 3: Test validation"

if has_staged_files "\.(js|ts)$" || has_staged_files "test/.*\.(js|ts)$" || has_staged_files "package\.json$"; then
  # Run quick syntax validation only
  if ! run_with_timeout "30s" "npm run test:quick" "Quick test syntax validation"; then
    echo "âŒ Test syntax validation failed"
    echo "ğŸ’¡ Fix syntax errors in test files"
    exit 1
  fi

  # Run API tests only if core files changed
  if has_staged_files "(taskmanager-api\.js|lib/.*\.js)$"; then
    if ! run_with_timeout "60s" "npm run test:api" "API test suite"; then
      echo "âŒ API tests failed"
      echo "ğŸ’¡ Core functionality tests failing - fix before commit"
      exit 1
    fi
  fi
else
  echo "â„¹ï¸ No source code changes detected, skipping tests"
fi

# Stage 4: Package.json and dependency validation
echo "ğŸ“‹ Stage 4: Package validation"

if has_staged_files "package\.json$" || has_staged_files "package-lock\.json$"; then
  echo "ğŸ” Validating package.json syntax..."
  if ! node -e "JSON.parse(require('fs').readFileSync('package.json'))"; then
    echo "âŒ package.json syntax error detected"
    exit 1
  fi

  echo "ğŸ”’ Running dependency security audit..."
  # Check for high/critical vulnerabilities only (don't block on moderate)
  if ! npm audit --audit-level=high --production > /dev/null 2>&1; then
    echo "âš ï¸ High/critical security vulnerabilities detected in dependencies"
    echo "ğŸ”§ Please run 'npm audit fix' to resolve security issues"
    echo "ğŸ“‹ To see details: npm audit"
    echo "â“ Do you want to proceed anyway? (y/N)"
    read -r response
    if [[ ! "$response" =~ ^[Yy]$ ]]; then
      echo "âŒ Commit aborted due to security vulnerabilities"
      exit 1
    fi
  else
    echo "âœ… No high/critical security vulnerabilities found"
  fi
fi

# Stage 5: Final quality checks
echo "ğŸ“‹ Stage 5: Final quality validation"

# Check for large files
large_files=$(git diff --cached --name-only | xargs ls -la 2>/dev/null | awk '{if($5 > 1048576) print $9 " (" $5 " bytes)"}')
if [ -n "$large_files" ]; then
  echo "âš ï¸ Large files detected in commit:"
  echo "$large_files"
  echo "â“ Are you sure you want to commit large files? (y/N)"
  read -r response
  if [[ ! "$response" =~ ^[Yy]$ ]]; then
    echo "âŒ Commit aborted due to large files"
    exit 1
  fi
fi

# Check for debugging code (configurable patterns)
debugging_patterns="debugger\|console\.error\|console\.warn"
todo_patterns="TODO\|FIXME\|XXX\|HACK"

if git diff --cached | grep -E "$debugging_patterns" > /dev/null; then
  echo "âš ï¸ Debugging code found in staged changes"
  echo "ğŸ” Found: debugger statements, console.error, console.warn"
  echo "â“ Do you want to proceed anyway? (y/N)"
  read -r response
  if [[ ! "$response" =~ ^[Yy]$ ]]; then
    echo "âŒ Commit aborted - please remove debugging code"
    exit 1
  fi
fi

if git diff --cached | grep -E "$todo_patterns" > /dev/null; then
  echo "â„¹ï¸ TODO/FIXME comments found in staged changes"
  echo "ğŸ“ Consider addressing these items before release"
fi

echo ""
echo "ğŸ‰ All enhanced pre-commit checks passed!"
echo "âœ… Code quality: Linted, formatted, and security-scanned"
echo "âœ… Dependencies: Validated and secure"
echo "âœ… Tests: Basic validation completed"
echo "ğŸ“ Next: Full test suite will run on push"
echo ""