{
  "version": "1.0.0",
  "projectType": "api-server",
  "customValidationRules": [
    {
      "id": "node-version-check",
      "name": "Node.js Version Validation",
      "description": "Validate Node.js version is available",
      "command": "node --version",
      "enabled": true,
      "timeout": 10000,
      "category": "quality",
      "successCriteria": {
        "exitCode": 0,
        "outputMatches": ["^v[0-9]+\\.[0-9]+\\.[0-9]+"]
      }
    },
    {
      "id": "package-json-check",
      "name": "Package.json Validation",
      "description": "Validate package.json exists and is valid JSON",
      "command": "node -e \"console.log('Package.json is valid:', JSON.parse(require('fs').readFileSync('package.json', 'utf8')).name)\"",
      "enabled": true,
      "timeout": 10000,
      "category": "quality",
      "conditions": {
        "fileExists": ["package.json"]
      },
      "successCriteria": {
        "exitCode": 0,
        "outputContains": ["Package.json is valid:"]
      }
    },
    {
      "id": "directory-structure-check",
      "name": "Basic Directory Structure",
      "description": "Check that basic project directories exist",
      "command": "ls -la",
      "enabled": true,
      "timeout": 5000,
      "category": "quality",
      "successCriteria": {
        "exitCode": 0,
        "outputContains": ["package.json", "node_modules"]
      }
    }
  ],
  "validationGroups": [
    {
      "name": "Environment Checks",
      "rules": ["node-version-check", "package-json-check"],
      "runInParallel": true,
      "description": "Basic environment validation"
    },
    {
      "name": "Project Structure",
      "rules": ["directory-structure-check"],
      "runInParallel": false,
      "description": "Project structure validation"
    }
  ],
  "globalSettings": {
    "maxConcurrentRules": 3,
    "defaultTimeout": 60000,
    "enableCaching": true,
    "cacheExpiryMinutes": 30,
    "logLevel": "info"
  }
}
